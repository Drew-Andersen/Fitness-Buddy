{{#each exercises}}
  <div class="card border text-white bg-gray-500 p-4 m-1 rounded-md">
    <div class="card-header">
      <h2 class="text-center">{{name}}</h2>
    </div>
    <div class="card-body">
      <p>{{description}}</p>
      <p>Created by:{{../name}} </p>
    </div>
  </div>
{{/each}}

<div class="container text-white m-auto text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title">Add New Exercise</h5>
        </div>
        <div class="card-body">
          <form class="exercise-add-form">
            <div class="form-group center-label">
              <label for="workout-name">Name:</label>
              <input type="text" class="form-control text-center border rounded-md m-0.5 text-black" id="form-name" name="name" required>
            </div>
            <div class="form-group">
              <label for="workout-desc">Description:</label>
              <textarea class="form-control text-center border rounded-md m-0.5 text-black" id="form-desc" name="description" rows="1" cols="25" required></textarea>
            </div>
            <button type="submit" class="text-white bg-green-700 hover:bg-green-800 font-bold py-2 px-4 rounded m-0.5">Add Workout</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



<script src="/js/muscleGroup.js"></script>